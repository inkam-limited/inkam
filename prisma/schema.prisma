generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MODERATOR
  PARTNER
}

enum AGENTTYPE {
  PHARMACY
  RESTURANT
  INDIVIDUAL
  MERCHANT
}

model Division {
  id        String     @id @default(uuid())
  name      String
  nameBn    String
  districts District[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model District {
  id          String   @id @default(uuid())
  name        String
  nameBn      String
  coordinates String
  divisionId  String
  division    Division @relation(fields: [divisionId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        String   @id @unique
  name      String?
  number    String?
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(PARTNER)
}

model Agent {
  agentId              String        @id @default(uuid())
  name                 String
  ownerNumber          String?
  number               String        @unique
  managerName          String?
  division             String?
  district             String?
  address              Json?
  latitude             Float?
  longitude            Float?
  payment              Float         @default(0.00)
  agentPayment         Float         @default(0.00)
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  transaction          Transaction[]
  AgentType            AGENTTYPE     @default(PHARMACY)
  geoLocationLatitude  Float?
  geoLocationLongitude Float?
  Payment              Payment[]
}

enum TransactionStatus {
  PENDING
  SCHEDULED
  FAILED
  PROVIDED
}

model Transaction {
  transactionId    String            @id @default(uuid())
  agent            Agent             @relation(fields: [agentId], references: [agentId], onDelete: Cascade)
  agentId          String
  agentNumber      String
  agentName        String
  customerNumber   String
  customerName     String
  customerLocation String
  labTestId        String
  inkam            Float             @default(0.00)
  amount           Float             @default(100.00)
  isPaid           Boolean           @default(false)
  status           TransactionStatus @default(PENDING)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  labTest          LabTest           @relation(fields: [labTestId], references: [testId])
  Payment          Payment[]
}

model LabTest {
  testId         String        @id @default(uuid())
  name           String        @unique
  commissionRate String
  commission     String
  price          String
  Transaction    Transaction[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

enum PaymentStatus {
  PENDING
  PAID
}

model Payment {
  amount        Float
  inkam         Float         @default(0.00)
  agentId       String
  status        PaymentStatus @default(PENDING)
  agent         Agent         @relation(fields: [agentId], references: [agentId])
  transactionId String
  transaction   Transaction   @relation(fields: [transactionId], references: [transactionId])
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@id([transactionId, agentId])
}
